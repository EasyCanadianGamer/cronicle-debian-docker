# Base Debian image
FROM debian:bookworm-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /opt/cronicle

# Run Cronicle auto-installer
RUN curl -s https://raw.githubusercontent.com/jhuckaby/Cronicle/master/bin/install.js | node

# Create persistent folders
RUN mkdir -p /opt/cronicle/data /opt/cronicle/logs /opt/cronicle/plugins /opt/cronicle-backup

# Add default config.json
COPY conf/config.json /opt/cronicle/conf/config.json

# Expose Cronicle port
EXPOSE 3012

# Entrypoint script to setup storage (once) and start Cronicle
COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["/usr/local/bin/docker-entrypoint.sh"]
