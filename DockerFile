# Base Debian image
FROM debian:bookworm-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20.x (or your preferred LTS)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /opt/cronicle

# Copy Cronicle files
COPY . /opt/cronicle

# Install npm dependencies
RUN npm install -g tsx \
    && npm install

# Expose Cronicle port
EXPOSE 3012

# Default entrypoint to start Cronicle manager
ENTRYPOINT ["/opt/cronicle/bin/manager"]
